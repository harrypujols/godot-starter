script/source = "extends Control

var icon_color = 'light'

func _ready():
	$input_icons.icon_color = icon_color
	$input_icons.set_keyboard_icons(icon_color)
	$input_ui.input_icon = $input_icons.input_accept
	Input.connect('joy_connection_changed', self, '_on_joy_connection_changed')
	$input_ui.refresh_icon()
	print(get_tree().current_scene.name)

func _input(event):
	if (event is InputEventJoypadButton) or (event is InputEventJoypadMotion):
		$input_icons.set_controller_icons(icon_color)
		$input_ui.input_icon = $input_icons.input_accept
		$input_ui.refresh_icon()
		
	if Input.is_action_just_pressed('ui_accept'):
		get_tree().change_scene('res://rooms/intro.tscn')
		
func _on_joy_connection_changed(device_id, connected):
	if connected:
		$input_icons.set_controller_icons(icon_color)
		$input_ui.input_icon = $input_icons.input_accept
		$input_ui.refresh_icon()
